<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Comfortaa">
        <Setter Property="TextElement.FontFamily" Value="Resources/Font/#Comfortaa" />
    </Style>
    <Style x:Key="ButtonFlat" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource ForeGround}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="15">
                        <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>
    <Style x:Key="ColorButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource OptionalBack2}"/>
        <Setter Property="Foreground" Value="{DynamicResource ForeGround}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
            BorderBrush="{TemplateBinding BorderBrush}" 
            BorderThickness="{TemplateBinding BorderThickness}" 
            CornerRadius="9">
                        <ContentPresenter HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>
    <BitmapImage x:Key="Align.Left" UriSource="/Resources/icons/alignleft_dark.png" />
    <BitmapImage x:Key="Align.Center" UriSource="/Resources/icons/aligncenter_dark.png" />
    <BitmapImage x:Key="Align.Right" UriSource="/Resources/icons/alignright_dark.png" />
    
    <BitmapImage x:Key="Image.Add" UriSource="/Resources/icons/addimage_dark.png" />
    <BitmapImage x:Key="Image.Remove" UriSource="/Resources/icons/removeimage_dark.png" />

    <BitmapImage x:Key="Cm.Copy" UriSource="/Resources/icons/copy_dark.png" />
    <BitmapImage x:Key="Cm.Paste" UriSource="/Resources/icons/paste_dark.png" />
    <BitmapImage x:Key="Cm.SelectAll" UriSource="/Resources/icons/selectall_dark.png" />

    <BitmapImage x:Key="Table.Insert" UriSource="/Resources/icons/inserttable_dark.png" />
    <BitmapImage x:Key="Table.Remove" UriSource="/Resources/icons/removetable_dark.png" />

    <SolidColorBrush x:Key="BackGround" Color="#FF252525"/>
    <SolidColorBrush x:Key="BrandColor" Color="#181478"/>
    <SolidColorBrush x:Key="OptionalColor" Color="#FF5D5D5D"/>
    <SolidColorBrush x:Key="OptionalBack" Color="#FF2B2B2B"/>
    <SolidColorBrush x:Key="ForeGround" Color="White"/>
    <SolidColorBrush x:Key="OptionalBack2" Color="#FF333333"/>
</ResourceDictionary>